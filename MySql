create table user
(
 user_id int not null,
 user_name varchar(20) not null,
 password int not null,
 sex varchar(10) not null,
 age int not null,
 telephone int not null,
 qq int not null
)
comment '用户表';

create unique index user_user_id_uindex
 on user (user_id);

alter table user
 add constraint user_pk
  primary key (user_id);




create table fans
(
 fans_id int not null,
 fans_name varchar(20) not null
)
comment '粉丝表';

create unique index fans_fans_id_uindex
 on fans (fans_id);

alter table fans
 add constraint fans_pk
  primary key (fans_id);



create table article
(
 article_id int not null
)
comment '文章表';

create unique index article_article_id_uindex
 on article (article_id);

alter table article
 add constraint article_pk

alter table article
 add user_id int not null;

alter table article
 add article_contents varchar(2000) not null;

alter table article
 add article_comment int not null;

alter table article
 add postedtime int not null;

alter table article
 add title varchar(100) not null;

alter table article
 add article_prise int not null;

  primary key (article_id);









create table focus
(
 focus_id int not null,
 focus_name varchar(20) not null
)
comment '关注表';

create unique index focus_focus_id_uindex
 on focus (focus_id);

alter table focus
 add constraint focus_pk
  primary key (focus_id);





create table album
(
 user_id int not null,
 photo_id int not null,
 time int not null,
 praise int not null
)
comment '相册表';

create unique index album_photo_id_uindex
 on album (photo_id);

alter table album
 add constraint album_pk
alter table album
 add album_comment int not null;

  primary key (photo_id);












create table picture
(
 picture_id int not null
)
comment '图片表';

create unique index picture_picture_id_uindex
 on picture (picture_id);

alter table picture
 add constraint picture_pk
  primary key (picture_id);













create table message
(
 message_user_id int not null,
 user_id int not null,
 message_contents varchar(2000) not null,
 message_time int not null,
 have_read varchar(10) not null
)
comment '留言表';

create unique index message_message_user_id_uindex
 on message (message_user_id);

alter table message
 add constraint message_pk
  primary key (message_user_id);















create table comment
(
 article_id int not null,
 user_id int not null,
 comment_content varchar(2000) not null,
 comment_time int not null,
 comment_id int not null
)
comment '评论表';

create unique index comment_comment_id_uindex
 on comment (comment_id);

alter table comment
 add constraint comment_pk
  primary key (comment_id);









create table topic
(
 topic_id int not null,
 user_id int not null,
 praise int not null,
 topic_comment varchar(200) not null
)
comment '话题表';

create unique index topic_topic_id_uindex
 on topic (topic_id);

alter table topic
 add constraint topic_pk
  primary key (topic_id);

